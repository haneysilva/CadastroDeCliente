<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" >

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TelaDeCadastro"
    android:orientation="vertical">

            <TextView android:text="T E L A  D E  C A D A S T R O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextNome"
                android:hint="Nome" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextCPF"
                android:hint="CPF"
                android:numeric="signed" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextRG"
                android:hint="RG"
                android:numeric="integer" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextEndereco"
                android:hint="Endereço" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextBairro"
                android:hint="Bairro" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextCidade"
                android:hint="Cidade" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextUF"
                android:hint="UF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextNomePai"
                android:hint="Nome do Pai" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextNomeMae"
                android:hint="Nome da Mãe" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextDataNascimento"
                android:hint="Data de Nascimento"
                android:numeric="signed" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/editTextLocalNascimento"
                android:hint="Local de Nascimento" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/buttonEnviar"
                android:hint="Enviar"
                android:onClick="enviar"/>

    </LinearLayout>

</ScrollView>
